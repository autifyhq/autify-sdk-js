{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "matchDatasources": ["npm"],
      "matchUpdateTypes": ["minor", "patch"],
      "groupName": "all non major npm update",
      "minimumReleaseAge": "3 days"
    }
  ],
  "rangeStrategy": "bump",
  "prConcurrentLimit": 20
}
